<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".FirstFragment">


    <TextView
            android:text="Registered: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/created_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp" android:layout_marginBottom="200dp"
            app:layout_constraintHorizontal_bias="0.402"
            android:textSize="18sp" app:layout_constraintVertical_bias="0.56" android:layout_marginEnd="120dp"
            android:layout_marginStart="120dp" android:textColor="#000000"/>
    <TextView
            android:text="First Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/first_name_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp" android:layout_marginBottom="200dp"
            app:layout_constraintHorizontal_bias="0.323" app:layout_constraintVertical_bias="0.048"
            android:textSize="18sp" android:layout_marginEnd="120dp" android:layout_marginStart="120dp"
            android:textColor="#000000"/>
    <TextView
            android:text="Email: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/email_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp" android:layout_marginBottom="200dp"
            app:layout_constraintVertical_bias="0.309"
            android:textSize="18sp" android:layout_marginEnd="120dp" android:layout_marginStart="120dp"
            android:textColor="#000000" app:layout_constraintHorizontal_bias="0.44"/>
    <TextView
            android:text="House: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/house_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp" android:layout_marginBottom="200dp"
            app:layout_constraintHorizontal_bias="0.216"
            android:textSize="18sp" app:layout_constraintVertical_bias="0.446" android:layout_marginEnd="120dp"
            android:layout_marginStart="120dp" android:textColor="#000000"/>
    <TextView
            android:text="Last Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/last_name_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp" android:layout_marginBottom="200dp"
            app:layout_constraintHorizontal_bias="0.322" app:layout_constraintVertical_bias="0.175"
            android:textSize="18sp" android:layout_marginEnd="120dp" android:layout_marginStart="120dp"
            android:textColor="#000000"/>
    <Button
            android:text="My info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.99"
            android:textSize="18sp"/>
    <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.99"
            android:textSize="18sp"/>
    <Button
            android:text="Throw garbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.99" android:textSize="18sp"/>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/user_info_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="296dp"
            app:layout_constraintTop_toBottomOf="@+id/first_name_tv" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Welcome to personal cabinet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="24sp" android:textColor="#0A0909"
            android:textAllCaps="true" android:textAlignment="textStart" android:fontFamily="sans-serif-smallcaps"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/first_name_tv" android:textStyle="bold|italic"/>
</androidx.constraintlayout.widget.ConstraintLayout>