<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".FirstFragment">


    <TextView
            android:text="Garbage type"
            android:layout_width="411dp"
            android:layout_height="43dp" android:id="@+id/textView5"
            android:layout_marginBottom="526dp"
            app:layout_constraintBottom_toTopOf="@+id/user_info_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="151dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="126dp" android:layout_marginEnd="201dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintVertical_bias="0.75" android:textColor="#E85D8C" android:textAllCaps="false"
            android:textStyle="bold" android:textAlignment="center" android:textSize="30sp"/>
    <Button
            android:text="My info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.99"
            android:textSize="18sp"/>
    <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.99"
            android:textSize="18sp"/>
    <Button
            android:text="Throw garbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.99" android:textSize="18sp"/>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/user_info_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="296dp"
            app:layout_constraintTop_toBottomOf="@+id/first_name_tv" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Garbage type"
            android:layout_width="411dp"
            android:layout_height="43dp" android:id="@+id/textView4"
            android:layout_marginBottom="526dp"
            app:layout_constraintBottom_toTopOf="@+id/user_info_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="151dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="126dp" android:layout_marginEnd="201dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintVertical_bias="0.75" android:textColor="#E85D8C" android:textAllCaps="false"
            android:textStyle="bold" android:textAlignment="center" android:textSize="30sp"/>
    <TextView
            android:text="Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textColor="#000000" android:textSize="18sp" android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" android:layout_marginBottom="83dp"
            app:layout_constraintBottom_toTopOf="@+id/user_info_button" android:layout_marginTop="83dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="182dp"
            android:layout_height="45dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextNumber2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/user_info_button"
            app:layout_constraintVertical_bias="0.057" android:textSize="24sp" android:textAlignment="center"/>
    <RadioGroup
            android:layout_width="208dp"
            android:layout_height="215dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" android:layout_marginBottom="114dp"
            app:layout_constraintBottom_toTopOf="@+id/user_info_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/radioGroup">
        <RadioButton
                android:text="Paper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:textSize="18sp"
                android:textAlignment="textStart"/>
        <RadioButton
                android:text="Glass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:textSize="18sp"
                android:textAlignment="textStart"/>
        <RadioButton
                android:text="Organic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton" android:textSize="18sp"
                android:textAlignment="textStart"/>
        <RadioButton
                android:text="Unsorted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton4" android:textSize="18sp"
                android:textAlignment="textStart"/>
    </RadioGroup>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/user_info_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.0"
            android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>